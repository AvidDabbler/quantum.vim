<?xml version="1.0" encoding="UTF-8"?>

<style-scheme id="quantum" _name="Quantum" version="1.0">
    <author>kjssad</author>
    <_description>A colorscheme for the GUI inspired by Firefox DevTools</_description>

    <color name="comment_color" value="#737373"/>
    <color name="keyword_color" value="#FF7DE9"/>
    <color name="special_color" value="#75BFFF"/>
    <color name="string_color" value="#6B89FF"/>
    <color name="function_color" value="#87DE74"/>
    <color name="type_color" value="#B98EFF"/>
    <color name="constant_color" value="#FC9867"/>
    <color name="error_color" value="#EB5368"/>
    <color name="text_fg" value="#D7D7DB"/>
    <color name="text_bg" value="#2a2a2e"/>
    <color name="line_highlight" value="#303034"/>
    <color name="line_numbers" value="#4A4A4F"/>
    <color name="selection_color" value="#38383D"/>
    
    <style name="text" foreground="text_fg" background="text_bg"/>
    <style name="cursor" foreground="text_fg"/>
    <style name="current-line" background="line_highlight"/>
    <style name="line-numbers" foreground="line_numbers" background="text_bg"/>
    <style name="selection" background="selection_color"/>

    <style name="bracket-match" foreground="text_bg" background="keyword_color"/>
    <style name="bracket-mismatch" background="error_color"/>
    <style name="search-match" foreground="comment_color" background="text_fg"/>

    <style name="def:comment" foreground="comment_color"/>
    <style name="def:shebang" foreground="comment_color"/>
    <style name="def:doc-comment-element" foreground="comment_color"/>
    <style name="def:note" foreground="comment_color"/>

    <style name="def:constant" foreground="constant_color"/>
    <style name="def:base-n-integer" foreground="constant_color"/>
    <style name="def:boolean" foreground="constant_color"/>
    <style name="def:complex" foreground="constant_color"/>
    <style name="def:decimal" foreground="constant_color"/>
    <style name="def:floating-point" foreground="constant_color"/>
    <style name="def:number" foreground="constant_color"/>
    <style name="def:special-char" foreground="special_color"/>
    <style name="def:character" foreground="string_color"/>
    <style name="def:string" foreground="string_color"/>

    <style name="def:identifier" foreground="keyword_color"/>
    <style name="def:function" foreground="function_color"/>

    <style name="def:statement" foreground="keyword_color"/>
    <style name="def:keyword" foreground="keyword_color"/>
    <style name="def:operator" foreground="keyword_color"/>
    <style name="def:preprocessor" foreground="keyword_color"/>

    <style name="def:type" foreground="type_color"/>
    <style name="def:builtin" foreground="type_color"/>

    <style name="def:special-constant" foreground="constant_color"/>
    <style name="def:error" foreground="text_bg" background="error_color"/>

    <style name="js:function" foreground="function_color"/>
</style-scheme>
